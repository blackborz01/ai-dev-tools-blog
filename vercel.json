{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install --legacy-peer-deps",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "app/**/*.ts": {
      "maxDuration": 10
    },
    "pages/api/**/*.ts": {
      "maxDuration": 10
    }
  }
}
