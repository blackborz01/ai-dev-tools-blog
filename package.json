{
  "name": "ai-dev-tools-blog",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run optimize:prebuild && ANALYZE=false next build --experimental-build-mode=compile && npm run optimize:postbuild",
    "start": "next start",
    "lint": "next lint",
    "update-data": "node scripts/run-update.js",
    "manual-update": "node scripts/manual-update.js",
    "check-articles": "node scripts/check-articles.js",
    "find-duplicates": "node scripts/find-duplicates.js",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "diagnose": "node scripts/diagnose-build.js",
    "clean": "rm -rf .next node_modules package-lock.json",
    "clean-install": "npm run clean && npm install",
    "lighthouse": "lighthouse https://boostdevspeed.com --output html --view",
    "optimize:prebuild": "node scripts/optimize-images.js && node scripts/generate-critical-css.js",
    "optimize:postbuild": "node scripts/compress-assets.js && node scripts/optimize-css.js && node scripts/optimize-js.js",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:css": "node scripts/generate-critical-css.js",
    "test:performance": "lighthouse https://boostdevspeed.com --output json --output-path=./lighthouse-report.json",
    "bundle:analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.11.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@vercel/analytics": "^1.1.0",
    "@vercel/speed-insights": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.294.0",
    "next": "14.2.0",
    "next-auth": "^4.24.7",
    "next-themes": "^0.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.2",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "critters": "^0.0.24",
    "cssnano": "^7.1.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.0",
    "postcss": "^8",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.3.1",
    "prisma": "^5.11.0",
    "sharp": "^0.33.2",
    "tailwindcss": "^3.3.0",
    "terser": "^5.43.1",
    "typescript": "^5"
  }
}
